<%= stylesheet_link_tag 'charities' %>

<div id="profile"></div>

<div class="container">

    <!-- <div class="col-xs-6 col-sm-3">
        &nbsp;
    </div> -->

    <form class="form-horizontal">
        <div class="form-group">
            <input type="hidden" id="charity_id" value="<%= @charity.id %>"/>

            <!-- <label for="item_name" class="col-sm-3 control-label">Item Name</label> -->
            <div class="col-sm-offset-3 col-sm-6">
                <input type="text" class="form-control" id="item_name" placeholder="Item Name">
            </div>
            <div class="col-sm-3">
                &nbsp;
            </div>
        </div>

        <div class="form-group">
            <!-- <label for="item_url" class="col-sm-3 control-label">Link to Item</label> -->
            <div class="col-sm-offset-3 col-sm-6">
                <input type="text" class="form-control" id="item_url" placeholder="Item URL">
            </div>
            <div class="col-sm-3">
                &nbsp;
            </div>
        </div>

        <div class="form-group">
            <!-- <label for="estimated_price" class="col-sm-3 control-label">Estimated Price</label> -->
            <div class="col-sm-offset-3 col-sm-6">
                <input type="text" class="form-control" id="estimated_price" placeholder="Est. Price"/>
            </div>
            <div class="col-sm-3">
                &nbsp;
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-6">
                <button class="btn btn-primary btn-block" id="addwishlistbutton">Add!</button>
            </div>
        </div>

    </form>

</div>

<div class="container">
    <h3 class="text-center">Our Wishlist</h3>
</div>

<div id="list-container"></div>

