<script src="/javascript/templates.js" charset="utf-8"></script>
<script src="/javascript/models/wish.js" charset="utf-8"></script>
<script src="/javascript/collections/wishes.js" charset="utf-8"></script>
<script src="/javascript/views/WishView.js" charset="utf-8"></script>
<script src="/javascript/views/WishItemView.js" charset="utf-8"></script>
<script src="/javascript/models/charityprofile.js"></script>
<script src="/javascript/views/CharityprofileView.js" charset="utf-8"></script>

<script>
    var charityprofile = new Charityprofile({id: <%= @charity.id %>})
    charityprofile.fetch();

    var wishes = new Wishes();
    wishes.reset(<%= raw(@charity.wishlists.to_json) %>)
</script>

