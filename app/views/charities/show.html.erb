<%= stylesheet_link_tag 'charities' %>


<div class="container" id="profile"></div>

<div class="container">
    <div class="row">

        <div class="col-xs-3"></div>

        <div class="col-xs-6">
            <div class="form-horizontal wishlist-add" id="wishlist-add-table">

                <div class="form-group">
                    <input type="hidden" id="charity_id" value="<%= @charity.id %>"/>
                    <input type="text" class="form-control" id="item_name" placeholder="Item Name">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" id="item_url" placeholder="Item URL">
                </div>

                <div class="form-group">
                    <input type="text" class="form-control" id="estimated_price" placeholder="Est. Price"/>
                </div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" id="addwishlistbutton">Add Item!</button>
                </div>

            </div>
        </div>

    </div>
</div>

<div class="container">
  <div class="panel panel-default">
      <div class="panel-heading wishlist-heading">
          <h3 class="text-center panel-title">Our Wishlist</h3>
      </div>

      <div class="panel-body wishlist-panel-body">
          <div id="list-container"></div>
      </div>
  </div>
</div>

<div class="container">
  <div class="row">

      <div class="col-xs-3"></div>

        <div class="form-group">
          <div class="col-sm-6">
              <button class="btn btn-primary btn-block" id="removefromwishlistbutton">I've donated this!</button>
          </div>
        </div>
        
    </div>
</div>

<script src="/javascript/templates.js" charset="utf-8"></script>
<script src="/javascript/models/wish.js" charset="utf-8"></script>
<script src="/javascript/collections/wishes.js" charset="utf-8"></script>
<script src="/javascript/views/WishView.js" charset="utf-8"></script>
<script src="/javascript/views/WishItemView.js" charset="utf-8"></script>
<script src="/javascript/models/charityprofile.js"></script>
<script src="/javascript/views/CharityprofileView.js" charset="utf-8"></script>

<script>
    var charityprofile = new Charityprofile({id: <%= @charity.id %>})
    charityprofile.fetch();

    var wishes = new Wishes();
    wishes.reset(<%= raw(@charity.wishlists.to_json) %>);

    var profileEditable = <%= @profile_editable %>;
    var profileEditableString = profileEditable.toString();

    var donorView = <%= @donorview %>
</script>

<script src="/javascript/app.js" charset="utf-8"></script>
