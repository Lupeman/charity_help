<div class="container">

  <div class="container">
    <div class="row">
      <div class="img-responsive text-center">
        <img src="{{ logo.url }}" alt="charity_logo" class="img-rounded center-block">
      </div>
    </div>
  </div>

  <div class="container">
    <h1 class="charity_name text-center" contenteditable="true"> {{ charity_name }} </h1>
    <p class="text-center"><a class="url" contenteditable="true" href="{{ url }}"> {{ url }} </a></p>
    <p class="description text-center" contenteditable="true"> {{ description }} </p>
    <p class="shipping_address text-center" contenteditable="true"> {{ shipping_address }} </p>
  </div>

</div>
